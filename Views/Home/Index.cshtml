@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To</h1>
    <h3 class="display-4">Egyptian Premier League Match Reservation System</h3>

    <!-- Button for "View Matches" -->
    <div style="display: inline-block; margin: 20px;">
        <a class="btn btn-primary rounded-pill" asp-area="" asp-controller="Matches" asp-action="Index">
            @*<i class="fa fa-futbol-o" style="margin-right: 5px;"></i> *@
            View Matches
        </a>
    </div>

    <!-- Button for "Login" -->
    <div style="display: inline-block; margin: 20px;">
        <a class="btn btn-primary rounded-pill" asp-area="" asp-controller="Account" asp-action="Login">
            @*<i class="fa fa-user" style="margin-right: 5px;"></i> *@
            Login
        </a>
    </div>
</div>